<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PANTALLA2" >

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >
    </RadioGroup>

    <TextView
        android:id="@+id/txttalla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginLeft="62dp"
        android:layout_toRightOf="@+id/radioGroup1"
        android:text="@string/etiqueta_talla" />

    <Button
        android:id="@+id/btnproce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtpeso"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:text="@string/etiqueta_procesar" />

    <EditText
        android:id="@+id/inputTalla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inputPeso"
        android:layout_below="@+id/txttalla"
        android:layout_marginTop="20dp"
        
        android:ems="10" />
    	<requestFocus />

    	
    <EditText
        android:id="@+id/inputPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10" >

        
    </EditText>

    <TextView
        android:id="@+id/txtpeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inputPeso"
        android:layout_alignRight="@+id/txttalla"
        android:text="@string/etiqueta_peso" />

</RelativeLayout>